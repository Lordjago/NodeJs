<%- include('../includes/header.ejs') %>
    </head>

    <body>
        <%- include('../includes/nav.ejs') %>

            <main>
                <% if (hasProducts) { %>
                    <div class="grid">
                        <% for (let product of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= product.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= product.imageUrl %>" alt="A Book">
                                </div>
                            <div class="card__content">
                                <h2 class="product__price">$<%= product.price %>
                                </h2>
                                <p class="product__description">
                                    <%= product.description %>
                                </p>
                            </div>
                                <div class="card__actions">
                                    <a href="/products/<%= product._id %>"class="detail">Details</a><br>
                                    <% if (isLoggedIn) { %>
                                        <%- include('../includes/add-to-cart.ejs', {product:product})%>
                                            <% } %>
                                </div>
                            </article>
                            <% } %>
                    </div>
                    <%- include('../includes/pagination.ejs', {currentPage: currentPage, prevPage: prevPage, nextPage: nextPage, lastPage:
                        lastPage, hasNextPage: hasNextPage, hasPrevious: hasPrevious}) %>
                    <% } else { %>
                        <h1>No Product Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/footer.ejs') %>